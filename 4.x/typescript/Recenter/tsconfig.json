{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,    
    "jsx": "react",
    "jsxFactory": "tsx",
    "lib": ["DOM","ES2020"],    
    "module": "amd",
    "moduleResolution": "node",    
    "noImplicitAny": true,
    "preserveConstEnums": true,    
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5"
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}