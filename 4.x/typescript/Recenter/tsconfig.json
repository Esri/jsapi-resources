{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "lib": ["ES2019", "DOM"],
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "ES5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "moduleResolution": "node"

  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}